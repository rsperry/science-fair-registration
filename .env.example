# Production environment variables for frontend
# Empty API_URL uses same-origin (backend serves frontend on same domain/port)
#VITE_API_URL=

# Development environment variables for frontend
# Set explicit backend URL for dev mode (backend runs separately)
VITE_API_URL=http://localhost:4000

# Server Configuration
NODE_ENV=development
PORT=4000
FRONTEND_ORIGIN=http://localhost:5173

# Google Sheets Configuration
GOOGLE_SHEETS_ID=your_spreadsheet_id_here
GOOGLE_SERVICE_ACCOUNT_KEY_BASE64=BASE64_ENCODED_JSON_KEY

# Security & Rate Limiting
RATE_LIMIT_WINDOW=3600000
RATE_LIMIT_MAX=10

# Optional: reCAPTCHA (leave empty to disable)
RECAPTCHA_SECRET=

# Optional: Sentry for error tracking
SENTRY_DSN=
