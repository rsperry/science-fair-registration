# Server Configuration
NODE_ENV=development
PORT=4000
FRONTEND_ORIGIN=http://localhost:5173

# Google Sheets Configuration
GOOGLE_SHEETS_ID=your_spreadsheet_id_here
# Option 1: Base64-encoded service account JSON
GOOGLE_SERVICE_ACCOUNT_KEY_BASE64=BASE64_ENCODED_JSON_KEY
# Option 2: Path to service account JSON file (alternative to base64)
# GOOGLE_SERVICE_ACCOUNT_KEY_PATH=/path/to/service-account-key.json

# Security & Rate Limiting
RATE_LIMIT_WINDOW=3600000
RATE_LIMIT_MAX=10

# Optional: reCAPTCHA (leave empty to disable)
RECAPTCHA_SECRET=

# Optional: Sentry for error tracking
SENTRY_DSN=
